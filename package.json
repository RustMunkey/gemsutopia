{
  "name": "gemsutopia-monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.28.0",
  "scripts": {
    "dev": "turbo run dev --concurrency=15",
    "dev:web": "turbo run dev --filter=@gemsutopia/web",
    "dev:admin": "turbo run dev --filter=@gemsutopia/admin",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@gemsutopia/web",
    "build:admin": "turbo run build --filter=@gemsutopia/admin",
    "build:packages": "turbo run build --filter=./packages/*",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "devDependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@types/node": "^25.0.6",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2.7.5",
    "typescript": "^5.9.3"
  }
}
